<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/id_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="布局 - ConstraintLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/id_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="显式启动activity"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/id_button_1"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/id_button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="隐式启动activity"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/id_button_2"
        app:layout_constraintTop_toBottomOf="@id/id_button_1"
        />
    <Button
        android:id="@+id/id_button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="lambda"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/id_button_3"
        app:layout_constraintTop_toBottomOf="@id/id_button_1"
        />
</android.support.constraint.ConstraintLayout>
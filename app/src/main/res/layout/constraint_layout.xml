<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 0、使用 ConstraintLayout 分组布局、控制子控件的显示隐藏 -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/id_layout_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorYellow"
        android:visibility="visible"
        >
        <!-- 1、分组显隐，可跨越分组（ConstraintLayout） -->
        <android.support.constraint.Group
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="id_textView_1,id_textView_2,id_textView_3"/>
        <TextView
            android:id="@+id/id_textView_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/id_textView_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水平居右"
            android:background="@color/colorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/id_textView_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="顶部居中"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/id_layout_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBlue"
        app:layout_constraintTop_toBottomOf="@id/id_layout_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="居中"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/id_layout_3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorYellowGreen"
        app:layout_constraintTop_toBottomOf="@id/id_layout_2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水平居中"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/id_layout_4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorOrange"
        app:layout_constraintTop_toBottomOf="@id/id_layout_3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="垂直居中"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/id_layout_5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorYellowGreen"
        app:layout_constraintTop_toBottomOf="@id/id_layout_4">

        <TextView
            android:id="@+id/id_textView_4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="文本基线(文本底部对齐)"
            android:textSize="26sp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/id_textView_5"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="文本基线"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@id/id_textView_4"
            app:layout_constraintBaseline_toBaselineOf="@id/id_textView_4"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/id_layout_6"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorOrange"
        app:layout_constraintTop_toBottomOf="@id/id_layout_5">

        <TextView
            android:id="@+id/id_textView_6"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="边距规则：
            1、数值大于0；
            2、有约束；"
            android:textSize="16sp"
            android:background="@color/colorBlue"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        />

    </android.support.constraint.ConstraintLayout>

    <!-- 2、水平链条 -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/id_layout_7"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorYellow"
        app:layout_constraintTop_toBottomOf="@id/id_layout_6">

        <TextView
            android:id="@+id/id_textView_11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="TextView1"
            android:textSize="16sp"
            android:background="@color/colorBlue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/id_textView_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        />
        <TextView
            android:id="@+id/id_textView_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="2"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="TextView2TextView2TextView2TextView2TextView2TextView2"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@id/id_textView_11"
            app:layout_constraintRight_toLeftOf="@id/id_textView_13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        />
        <TextView
            android:id="@+id/id_textView_13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            android:text="TextView3"
            android:textSize="16sp"
            android:background="@color/colorBlue"
            app:layout_constraintLeft_toRightOf="@id/id_textView_12"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        />
    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>